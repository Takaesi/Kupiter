generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ======== MODELS ========
//

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String
  firstName   String
  lastName    String
  phone       String?
  city        String?
  createdAt   DateTime  @default(now())

  ads         Ad[]      // объявления пользователя
}

model Ad {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  price       Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  city        String


// связи
  ownerId     Int
  owner       User      @relation(fields: [ownerId], references: [id])
  category    String
  images      Image[]
}

model Image {
  id       Int    @id @default(autoincrement())
  url      String

  adId     Int
  ad       Ad     @relation(fields: [adId], references: [id], onDelete: Cascade)
}
